@{
    ViewData["Title"] = "Private Lessons";
}
<h1>@ViewData["Title"]</h1>

@section Scripts {
    <script src="~/js/calculator.js"></script>
}

<p>Want Private Lessons? Find rates below </p>

<div class="calculator-container">
    <!-- A box for the user to enter the number of hours they need from you-->
    <label for="hours">Number of Hours:</label>
    <input type="number" id="hours" name="hours" placeholder="Enter number of hours" min="1" required>

    <!--An non-editable box that shows how much you charge per hour-->
    <label for="rate">Hourly Rate ($):</label>
    <input type="text" id="rate" name="rate" value="55" readonly>

    <!--A button that allows the user to calculate the total-->
    <button id="calculate">Calculate Total</button>

    <!-- An output box that shows the total-->
    <label for="total">Total Cost ($):</label>
    <input type="text" id="total" name="total" readonly>
</div>

<br/>
<!-- Navigation back to the home page-->
<a href="/">Back to Home</a>
